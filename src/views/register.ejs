<!DOCTYPE html>
<html lang="en">
    
        <%- include('partials/head', {title: 'Todos los productos'}) %>
    
<body>

        <%- include('partials/headerNavbar') %>

        <form  class="form__middleware" action="/users/register" method="POST">

            <div class="form__center">
                <label for="first_name">Nombre:</label>
            <input type="text" name="first_name" id="first_name" value="<%=locals.old  && old.first_name %>">  

                <% if (errors && errors.first_name) { %>
                    <p class="feedback"><%= errors.first_name.msg%></p>
                <% } %>                
            </div>
        
        <div   class="form__center">
            <label for="last_name">Apellido:</label>
            <input type="text" name="last_name" id="last_name">
        </div>
        
            <div class="form__center">
                <label for="email">Correo electrónico:</label>
            <input type="email" name="email" id="email"  value="<%=locals.old  && old.email %>">

            <% if (errors && errors.email) { %>
                <p class="feedback"><%= errors.email.msg %></p> 
                <% } %>

            </div>
        
        <div class="form__center">
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" value="<%= locals.old && old.password %>">

            <% if(errors && errors.password) { %>
                <p class="feedback"> <%= errors.password.msg%></p>
            <% } %>
        </div>
        
            <button type="submit">Registrarme</button>
        </form>

        <%- include('partials/footer') %>

</body>
</html>

